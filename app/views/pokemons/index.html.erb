<h1>Pokemons</h1>

<%= form_tag "/", :method => "get" do %>
    <%= label_tag(:search, "Search for a Pokemon") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("Search", :name => nil) %>
<% end %>

<% @pokemons.each do |pokemon| %>
    <% if user_signed_in? %>
        <ul>
            <%= link_to pokemon.name, pokemon %>
            <% unless pokemon.url.blank? %>
                <%= image_tag pokemon.url %>
            <% end %>
        </ul>
        <% else %>
            <%= pokemon.name %>
            <% unless pokemon.url.blank? %>
                <%= image_tag pokemon.url %>
            <% end %>
        <% end %> 
<% end %>

<%= paginate @pokemons %>